@page
@model IndexModel
@{
    this.ViewData["Title"] = "Profile";
    this.ViewData["ActivePage"] = ManageNavPages.Index;
    var count = 1;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Images"></label>
                <input asp-for="Input.Images" class="form-control-file" />
                <span asp-validation-for="Input.Images" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="container">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @if (this.Model.Input.ImagesInfo.Count() >= 1)
                        {
                            @foreach (var imageInfo in Model.Input.ImagesInfo)
                            {
                                if (count == 1)
                                {
                                    <div class="carousel-item active text-center">
                                        <img class="d-block w-100" src="@imageInfo.Path"
                                             alt="First slide">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" asp-for="@imageInfo.IsForDeletion" asp-route-id="@imageInfo.Id" class="custom-control-input" id="customCheck1">
                                            <label class="custom-control-label" asp-for="@imageInfo.IsForDeletion" for="customCheck1"></label>
                                        </div>
                                    </div>
                                }
                                else
                                {

                                    <div class="carousel-item text-center">
                                        <img class="d-block w-100" src="@imageInfo.Path"
                                             alt="Second slide">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" asp-for="@Model.Input.ImageInfo.IsForDeletion" class="custom-control-input" id="customCheck1">
                                            <label class="custom-control-label" asp-for="@Model.Input.ImageInfo.IsForDeletion" for="customCheck1"></label>
                                        </div>
                                    </div>
                                }

                                count++;
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/img/default-profile-picture1.jpg"
                                     alt="First slide">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
