@model ElectricTravel.Web.ViewModels.Cities.CityViewModel

@{
    this.ViewData["Title"] = "Delete";
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container text-center text-danger custom-bg">
    <br />
    <div>
        <h1>@this.ViewData["Title"]</h1>
        <h3>Are you sure you want to delete this?</h3>
    </div>
    <div class="text-left">
        <a class="btn btn-info text-left" asp-action="Index">Back to List</a>
    </div>
    <div>
        <hr />
        <div class="row">
            <div class="col">
                <label asp-for="@Model.Name"></label>
                <span>@Model.Name</span>
            </div>
            <div class="col">
                <label asp-for="@Model.RegionName"></label>
                <span>@Model.RegionName</span>
            </div>
            <div class="col">
                <label asp-for="@Model.CreatedOn"></label>
                <span>@Model.CreatedOn</span>
            </div>
            <div class="col">
                <label asp-for="@Model.ModifiedOn"></label>
                <span>@Model.ModifiedOn</span>
            </div>
        </div>
        <br />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    <br />
</div>

@section Scripts{
    <link href="~/css/style.css" rel="stylesheet" />
}
