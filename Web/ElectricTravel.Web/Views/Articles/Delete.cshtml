@model ElectricTravel.Web.ViewModels.Articles.DetailArticleVIewModel

@{
    this.ViewData["Title"] = "Delete";
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container text-center text-light custom-bg">
    <br />
    <div>
        <h1>@this.ViewData["Title"]</h1>
        <h3>Are you sure you want to delete this Article?</h3>
    </div>
    <div class="text-left"><a class="btn btn-info" asp-action="Index">Back to List</a></div>
    <div>
        <hr />
        <div class="row-cols-1">
            <label class="text-white-50"  asp-for="CreatedByUserName"></label>
            <span>@Model.CreatedByUserName</span>
        </div>
        <div class="row-cols-1">
            <label class="text-white-50" asp-for="Title"></label>
            <span>@Model.Title</span>
        </div>
        <div class="row-cols-1">
            <label class="text-white-50" asp-for="Content"></label>
            <span>@Model.Content</span>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    <br />
</div>

@section Scripts{
    <link href="~/css/style.css" rel="stylesheet" />
}
