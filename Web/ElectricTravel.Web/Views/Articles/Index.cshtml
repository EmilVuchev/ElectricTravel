@model IEnumerable<ElectricTravel.Web.ViewModels.Articles.ArticleViewModel>

@{
    this.ViewData["Title"] = "Articles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container text-center text-light custom-bg">
    <br />
    <div><h1>@this.ViewData["Title"]</h1> </div>
    <div class="text-left">
        <p>
            <a class="btn btn-success" asp-action="Create">Create New</a>
        </p>
    </div>

    <table class="table text-light">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedByUserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.ShortDescription
                    </td>
                    <td>
                        @item.CreatedByUserName
                    </td>
                    <td>
                        @item.CreatedOn
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
</div>

@section Scripts{
    <link href="~/css/style.css" rel="stylesheet" />
}
