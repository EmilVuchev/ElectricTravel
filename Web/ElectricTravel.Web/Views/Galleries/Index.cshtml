@model IEnumerable<ElectricTravel.Web.ViewModels.Images.ProfileImageViewModel>
@{
    this.ViewData["Title"] = "Gallery";
    var count = 1;
}

<div class="container custom-bg">
    <hr>
    <div class="row">
        <div class="col">
            <div class="container">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner border">
                        @if (this.Model.Count() >= 1)
                        {
                            @foreach (var image in Model)
                            {
                                if (count == 1)
                                {
                                    <div class="carousel-item active text-center">
                                        <img class="d-block w-100" src="@image.Path"
                                             alt="First slide">
                                        @*<form method="post">
                                                <div class="text-center">
                                                    <input type="submit" value="Delete" asp-action="DeletePicture" asp-route-id="@image.Id">
                                                </div>
                                            </form>*@
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item text-center">
                                        <img class="d-block w-100" src="@image.Path"
                                             alt="Second slide">
                                    </div>
                                }

                                count++;
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/img/default-profile-picture1.jpg"
                                     alt="First slide">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col offset-1">
            <div class="container">
                <div class="row">
                    <div class="row">
                        @foreach (var image in Model)
                        {
                            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-title=""
                                   data-image="@image.Path"
                                   data-target="#image-gallery">
                                    <img class="img-thumbnail"
                                         src="@image.Path"
                                         alt="@image.Name">
                                </a>
                                <form method="post">
                                    <div class="text-center">
                                        <input type="submit" class="btn btn-primary btn-sm" value="Delete" asp-action="DeletePicture" asp-route-id="@image.Id" />
                                    </div>
                                </form>
                            </div>
                        }

                    </div>
                    <div class="row"><a class="btn btn-secondary" href="/Identity/Account/Manage/Index">Add pictures</a></div>

                    <div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="image-gallery-title"></h4>
                                    <button type="button" class="close" data-dismiss="modal">
                                        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <img id="image-gallery-image" class="img-responsive col-md-12" src="">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary float-left" id="show-previous-image">
                                        <i class="fa fa-arrow-left"></i>
                                    </button>
                                    <button type="button" id="show-next-image" class="btn btn-secondary float-right">
                                        <i class="fa fa-arrow-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
</div>

@section Scripts{
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/galleryStyle.css" rel="stylesheet" />
    <script src="~/js/gallery.js"></script>
}
