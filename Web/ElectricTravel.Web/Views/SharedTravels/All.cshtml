@model IEnumerable<SharedTravelsViewModel>
@{
    this.ViewData["Title"] = "Shared Travel Adverts";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 1;
}
<hr />
<div class="container sm blablabla text-white">
    <h1 class="text-center">@this.ViewData["Title"]</h1>
    <hr />
    <table id="dtBasicExample" class="table table-striped row-cols-3 text-center text-white" cellspacing="0">
        <thead class="sorting_desc" aria-controls="dtBasicExample" rowspan="1" colspan="1">
            <tr class="text-dark">
                <th scope="col"></th>
                <th scope="col">@GlobalConstants.StartDestinationTitle</th>
                <th scope="col">@GlobalConstants.DestinationTitle</th>
                <th scope="col">@GlobalConstants.AdvertDateTitle</th>
                <th scope="col">@GlobalConstants.AdvertHourTitle</th>
                <th scope="col">@GlobalConstants.AdvertDayTitle</th>
                <th scope="col">@GlobalConstants.AdvertTypeTravelTitle</th>
                <th scope="col">@GlobalConstants.AdvertSeatsTitle</th>
                @*<th scope="col">@GlobalConstants.AdvertSmokeRestrictionTitle</th>
                    <th scope="col">@GlobalConstants.AdvertLuggageTitle</th>
                    <th scope="col">@GlobalConstants.AdvertReturnTripTitle</th>*@
                <th scope="col">@GlobalConstants.Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var advert in Model)
            {
                <tr class="text-white">
                    <th>@(count++)</th>
                    <td>@advert.StartDestinationName</td>
                    <td>@advert.EndDestinationName</td>
                    <td>@advert.Date</td>
                    <td>@advert.Hour</td>
                    <td>@advert.Day</td>
                    <td>@advert.TypeOfTravelName</td>
                    <td>@advert.Seats</td>
                    @*<td>@advert.SmokeRestrictionAsString</td>
                        <td>@advert.PlaceForLuggageAsString</td>
                        <td>@advert.WithReturnTripAsString</td>*@
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@advert.Id"><i class="far fa-eye"></i></a>
                        @*<button type="button" class="btn btn-primary" asp-controller="SharedTravels" asp-action="Details" asp-route-id="@advert.Id"><i class="far fa-eye"></i></button>*@
                        @*<button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                            <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script src="~/js/addons/datatables.js"></script>
    <link href="~/css/addons/datatables.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });</script>

    <style>
        body {
            background: url('../../../img/neonbrand-orGJcWVI6js-unsplash.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .page-link {
            color : rgb(255, 255, 255)
        }

        .blablabla {
            background-color: rgba(0, 0, 0, 0.50);
        }
    </style>
}
