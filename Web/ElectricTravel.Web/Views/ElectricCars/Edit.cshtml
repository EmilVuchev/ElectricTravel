@model ElectricTravel.Web.ViewModels.Cars.CarViewModel

@{
    this.ViewData["Title"] = "Edit car";
}

<br />
<div class="container">
    <div class="card text-center text-light custom-bg">
        <div class="card-header text-center">
            <h2>@this.ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <form asp-action="Edit">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="MakeName"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="MakeName" class="form-control" />
                                        <span asp-validation-for="MakeName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="ModelName"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="ModelName" class="form-control" />
                                        <span asp-validation-for="ModelName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Drive"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Drive" class="form-control" />
                                        <span asp-validation-for="Drive" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Battery"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Battery" class="form-control" />
                                        <span asp-validation-for="Battery" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="ElectricityConsumption"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="ElectricityConsumption" class="form-control" />
                                        <span asp-validation-for="ElectricityConsumption" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Range"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Range" class="form-control" />
                                        <span asp-validation-for="Range" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="HorsePower"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="HorsePower" class="form-control" />
                                        <span asp-validation-for="HorsePower" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="TopSpeed"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="TopSpeed" class="form-control" />
                                        <span asp-validation-for="TopSpeed" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Acceleration"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Acceleration" class="form-control" />
                                        <span asp-validation-for="Acceleration" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Doors"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Doors" class="form-control" />
                                        <span asp-validation-for="Doors" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Seats"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Seats" class="form-control" />
                                        <span asp-validation-for="Seats" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="LuggageCapacity"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="LuggageCapacity" class="form-control" />
                                        <span asp-validation-for="LuggageCapacity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Year"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Year" class="form-control" />
                                        <span asp-validation-for="Year" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Kilometres"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Kilometres" class="form-control" />
                                        <span asp-validation-for="Kilometres" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="row">
                                    <div class="col">
                                        <label asp-for="Color"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Color" class="form-control" />
                                        <span asp-validation-for="Color" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col-4">
                                        <label asp-for="Description"></label>
                                    </div>
                                    <div class="col-8">
                                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <a class="btn btn-info" asp-controller="ElectricCars" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                            </div>
                        </div>
                    </div>
                </form>
                    @foreach (var image in Model.Images)
                    {
                        <div class="col thumb">
                            <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-title=""
                               data-image="@image.Path"
                               data-target="#image-gallery">
                                <img class="img-thumbnail"
                                     src="@image.Path"
                                     alt="@image.Name">
                            </a>
                            <form method="post">
                                <div class="text-center">
                                    <input type="submit" class="btn btn-primary btn-sm" value="Delete" asp-action="DeletePicture" asp-route-id="@image.Id" />
                                </div>
                            </form>
                        </div>
                        <div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="image-gallery-title"></h4>
                                        <button type="button" class="close" data-dismiss="modal">
                                            <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <img id="image-gallery-image" class="img-responsive col-md-12" src="@image.Path">
                                    </div>
                                    <div class="modal-footer">
                                        <div>
                                            @image.Description
                                        </div>
                                        <button type="button" class="btn btn-secondary float-left" id="show-previous-image">
                                            <i class="fa fa-arrow-left"></i>
                                        </button>
                                        <button type="button" id="show-next-image" class="btn btn-secondary float-right">
                                            <i class="fa fa-arrow-right"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                @if(!Model.Images.Any())
                {
                    <div class="col">
                        <img class="" src="~/img/race-car-svgrepo-com.svg" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <link href="~/css/style.css" rel="stylesheet" />
}