@model AdvertsListViewModel
@{
    var count = 1;
    const string DateTitle = "Date";
    const string HourTitle = "Hour";
    const string DayTitle = "Day";
    const string SeatsTitle = "Seats";
    const string DetailsTitle = "Details";
    const string IsApprovedTitle = "Is Approved";
}

<form method="get" class="form-inline my-2 my-lg-0 text-right justify-content-end" asp-area="" asp-controller="@Model.Controller" asp-action="@Model.Action">
    <input type="search" placeholder="Enter destination" class="form-control mr-sm-2" value="@this.ViewData["Getadvertsdetails"]" name="search" />
    <input type="submit" value="Search" class="btn btn-outline-primary page-link  my-2 my-sm-0" />
</form>
<br />
<table id="dtBasicExample" class="table table-striped row-cols-3 text-center text-white" cellspacing="0">
    <thead class="sorting_desc" aria-controls="dtBasicExample" rowspan="1" colspan="1">
        <tr class="text-white-50">
            <th scope="col"></th>
            <th scope="col">@GlobalConstants.StartDestinationTitle</th>
            <th scope="col">@GlobalConstants.EndDestinationTitle</th>
            <th scope="col">@DateTitle</th>
            <th scope="col">@HourTitle</th>
            <th scope="col">@DayTitle</th>
            <th scope="col">@GlobalConstants.TravelType</th>
            <th scope="col">@SeatsTitle</th>
            <th scope="col">@IsApprovedTitle</th>
            <th scope="col">@DetailsTitle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var advert in Model.Adverts)
        {
            <tr>
                <th>@(count++)</th>
                <td>@advert.StartDestinationName</td>
                <td>@advert.EndDestinationName</td>
                <td>@advert.Date</td>
                <td>@advert.Hour</td>
                <td>@advert.Day</td>
                <td>@advert.TypeOfTravelName</td>
                <td>@advert.Seats</td>
                <td>@advert.IsApproved</td>
                <td>
                    <a class="btn btn-primary" asp-controller="SharedTravels" asp-action="TripDetails" asp-route-id="@advert.Id"><i class="far fa-eye"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-right"><partial name="_PagingPartial" model="@Model" /></div>
<hr />

