@model ElectricTravel.Web.ViewModels.ChargingStations.ChargingStationDeleteDetailsViewModel

@{
    this.ViewData["Title"] = "Delete";
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container text-center text-light custom-bg">
    <br />
    <div>
        <h1>@this.ViewData["Title"]</h1>

        <h3>Are you sure you want to delete this?</h3>
    </div>

    <div>
        <h4>Charging Station</h4>
        <hr />
        <div class="row">
            <div class="col">
                <label class="text-white-50" asp-for="Name"></label>
                <span>@Model.Name</span>
            </div>
            <div class="col">
                <label class="text-white-50" asp-for="WorkTime"></label>
                <span>@Model.WorkTime</span>
            </div>
            <div class="col">
                <label class="text-white-50" asp-for="Description"></label>
                <span>@Model.Description</span>
            </div>
        </div>
        <br />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
    <br />
</div>

@section Scripts{
    <link href="~/css/style.css" rel="stylesheet" />
}
